/* Copy of the following file, simplified and edited to be used with CMake */
/* pecos_config.h.in. Originally generated from configure.ac by autoheader. */

/* Macro to disable Boost asserts. */
#cmakedefine BOOST_DISABLE_ASSERTS 1

// WJB - ToDo: get guidance since I suspect I am doing this wrong!! #define F77_FUNC@F77_FUNC@
/* Define to dummy `main' function (if any) required to link to the Fortran
   libraries. */
/* #undef F77_DUMMY_MAIN */

/* Define to a macro mangling the given C identifier (in lower and upper
   case), which must not contain underscores, for linking with Fortran. */
#ifdef F77_FUNC
#undef F77_FUNC
#define F77_FUNC@FortranCInterface_GLOBAL_MACRO@
#endif
#define FC_FUNC@FortranCInterface_GLOBAL_MACRO@

/* As F77_FUNC, but for C identifiers containing underscores. */
#define F77_FUNC_@F77_FUNC@_
#define FC_FUNC_@FortranCInterface_GLOBAL_MACRO@

/* Define if F77_FUNC and F77_FUNC_ are equivalent. */
#cmakedefine F77_FUNC_EQUIV

/* Define if F77 and FC dummy `main' functions are identical. */
#cmakedefine FC_DUMMY_MAIN_EQ_F77

/* Macro to handle code which depends on DFFTPACK. */
#cmakedefine HAVE_DFFTPACK 1

/* Define if you have LAPACK library. */
#ifdef HAVE_LAPACK
#undef HAVE_LAPACK
#define HAVE_LAPACK @LAPACK_lapack_WORKS@
#endif

/* Macro to handle code which depends on LHS. */
#cmakedefine HAVE_LHS 1

/* Macro to enable debug in Pecos. */
#cmakedefine HAVE_PECOS_DEBUG

/* Macro to handle code which depends on VPISparseGrid. */
#cmakedefine HAVE_SPARSE_GRID 1

